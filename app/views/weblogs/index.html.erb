<h1>ブログ一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Blog name</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @weblogs.each do |weblog| %>
      <tr>
        <td><%= weblog.profile.name %></td>
        <td><%= weblog.blog_name %></td>
        <% if weblog.user_id == session[:login] %>
          <td><%= link_to '記事を書く', new_entry_path %></td>
        <% end %>
        <td><%= link_to 'Show', weblog %></td>
        <td><%= link_to 'Edit', edit_weblog_path(weblog) %></td>
        <td><%= link_to 'Destroy', weblog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weblog', new_weblog_path %>
